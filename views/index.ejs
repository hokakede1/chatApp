<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Demo chatApp</title>
    <script type="text/javascript" src='jquery.js'></script>
    <script src='/socket.io/socket.io.js'></script>
    <script type="text/javascript" src='app.js'></script>

    <link rel="stylesheet" type="text/css" href="./layout.css">
  </head>

  <body>
    <div id="wrapper">


      <div id="loginForm">
        <h3>Enter your name below </h3>
        <input type="text" id="txtUsername" />
        <input type="button" value="Register" id="btnRegister" />
      </div>

      <div id="chatForm">
        <div class="left">
          <div class="boxTitle">
            User Online
          </div>
          <div class="boxContent">
          </div>
        </div>
        <div class="right">
          <div id='sayHi'> Hello <span id='currentUser'> Teo </span>
            <input type="button" id="btnLogout" value="Logout">
          </div>

          <div id='listMessages'>
          </div>
          <div id='thongbao'></div>

          <div>
            <input type="text" id='txtMessage' />
            <input type="button" id='btnSendMessage' value='send' />
          </div>

        </div>
      </div>

    </div>
  </body>
</html>
